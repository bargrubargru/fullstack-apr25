{
  "name": "student-management",
  "version": "1.0.0",
  "description": "A student management system learning project",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "npm run build && concurrently \"npm run watch:ts\" \"npm run watch:scss\" \"npm run watch:server\"",
     "build": "npm run build:ts && npm run build:scss",
    "build:ts": "tsc",
    "build:scss": "sass src/styles:dist/styles",
    "watch:ts": "tsc --watch",
    "watch:scss": "sass --watch src/styles:dist/styles",
    "watch:server": "nodemon dist/server.js",
    "clean": "rm -rf dist"
  },
 "keywords": ["student", "management", "learning", "routes"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "typescript": "^5.0.0",
    "sass": "^1.60.0",
    "concurrently": "^8.0.0",
    "@types/express": "^4.17.0",
    "@types/node": "^18.0.0"
  }
}

{
  "watch": ["dist"],
  "ext": "js",
  "ignore": ["node_modules/",  "src/", "*.test.js"],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 500
} 
//tsconfig.json(?)
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}